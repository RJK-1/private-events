<div class="section">
  <h1 class="title is-2 has-text-dark has-text-centered">All Events</h1><br>
  
  <div class="columns is-centered">
    <div class="column is-two-fifths">
      <% @events.each do |event| %>
        <% if event.id.to_i % 2 == 1 %>
          <div class="box has-background-light">
            <div class="content">
              <i>Event name: <strong><%= event.name %></strong><br>
              Created by: <strong><%= (event.date).strftime("%d/%m/20%y") %></strong><br>
              Created by: <strong><%= event.creator.username %></strong></i><br><br>
              <%= event.description %>
            </div>
            <div class="content has-text-centered">
              <div class="button">
                <%= link_to 'View Event', "/events/#{event.id}" %>
              </div>
              <% if user_signed_in? %>
                <% if current_user.attended_events.include?(event) %>
                  <div class="button is-centered">
                    <%= link_to 'Leave Event', "/attendees/#{event.id}", method: :delete %>
                  </div>
                <% else %>
                  <div class="button is-centered">
                    <%= link_to 'Join Event', "/attendees/new/#{event.id}" %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="column is-two-fifths">
      <% @events.each do |event| %>
        <% if event.id.to_i % 2 == 0 %>
          <div class="box has-background-light">
            <div class="content">
              <i>Event name: <strong><%= event.name %></strong><br>
              Created by: <strong><%= (event.date).strftime("%d/%m/20%y") %></strong><br>
              Created by: <strong><%= event.creator.username %></strong></i><br><br>
              <%= event.description %>
            </div>
            <div class="content has-text-centered">
              <div class="button">
                <%= link_to 'View Event', "/events/#{event.id}" %>
              </div>
              <% if user_signed_in? %>
                <% if current_user.attended_events.include?(event) %>
                  <div class="button is-centered">
                    <%= link_to 'Leave Event', "/attendees/#{event.id}", method: :delete %>
                  </div>
                <% else %>
                  <div class="button is-centered">
                    <%= link_to 'Join Event', "/attendees/new/#{event.id}" %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
  