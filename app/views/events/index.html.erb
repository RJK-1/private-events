<div class="section">
  <h1 class="title is-3 has-text-dark has-text-centered">Future Events</h1><br>

    <div class="columns">
      <% @events.future.each do |event| %>
        <div class="column is-4">
          <div class="box has-background-light">
            <div class="content">
              <i>Event name: <strong><%= event.name %></strong><br>
              Event date: <strong><%= (event.date).strftime("%d/%m/20%y") %></strong><br></i>
            </div>
            <div class="content has-text-centered">
              <div class="button">
                <%= link_to 'View Event', "/events/#{event.id}" %>
              </div>
              <% if user_signed_in? %>
                <% if current_user.attended_events.include?(event) %>
                  <div class="button is-centered">
                    <%= link_to 'Leave Event', "/attendees/#{event.id}", method: :delete %>
                  </div>
                <% else %>
                  <div class="button is-centered">
                    <%= link_to 'Join Event', "/attendees/new/#{event.id}" %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div><br><br>

    <h1 class="title is-3 has-text-dark has-text-centered">Past Events</h1><br>

    <div class="columns">
      <% @events.past.each do |event| %>
        <div class="column is-4">
          <div class="box has-background-light">
            <div class="content">
              <i>Event name: <strong><%= event.name %></strong><br>
              Event date: <strong><%= (event.date).strftime("%d/%m/20%y") %></strong><br></i>
            </div>
            <div class="content has-text-centered">
              <div class="button">
                <%= link_to 'View Event', "/events/#{event.id}" %>
              </div>
              <% if user_signed_in? %>
                <% if current_user.attended_events.include?(event) %>
                  <div class="button is-centered">
                    <%= link_to 'Leave Event', "/attendees/#{event.id}", method: :delete %>
                  </div>
                <% else %>
                  <div class="button is-centered">
                    <%= link_to 'Join Event', "/attendees/new/#{event.id}" %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
  