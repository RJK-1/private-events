<div class="section">
  <h1 class="title is-4 has-text-dark has-text-centered">My Created Events</h1><br>
  <div class="columns is-centered">
  <% if @user.events.all.length <= 1 %>
    <% @user.events.each do |event| %>
      <div class="column is-two-fifths">
        <div class="box has-background-light">
          <div class="content">
            <strong><%= event.name %></strong>
            <small><%= (event.date).strftime("%d/%m/20%y") %></small><br>
            <small><%= event.description %></small>
          </div>
          <div class="content has-text-centered">
            <div class="button">
              <%= link_to 'View Event', "/events/#{event.id}" %>
            </div>
            <% if user_signed_in? %>
              <% if current_user.attended_events.include?(event) %>
                <div class="button is-centered">
                  <%= link_to 'Leave Event', "/attendees/#{event.id}", method: :delete %>
                </div>
              <% else %>
                <div class="button is-centered">
                  <%= link_to 'Join Event', "/attendees/new/#{event.id}" %>
                </div>
              <% end %>
              <div class="button is-centered">
                <%= link_to 'Delete Event', "/events/#{event.id}", method: :delete %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="column is-two-fifths">
      <% @user.events.each do |event| %>
        <% if event.id.to_i % 2 == 1 %>
          <div class="box has-background-light">
            <div class="content">
              <strong><%= event.name %></strong>
              <small><%= (event.date).strftime("%d/%m/20%y") %></small><br>
              <small><%= event.description %></small>
            </div>
            <div class="content has-text-centered">
              <div class="button">
                <%= link_to 'View Event', "/events/#{event.id}" %>
              </div>
              <% if user_signed_in? %>
                <% if current_user.attended_events.include?(event) %>
                  <div class="button is-centered">
                    <%= link_to 'Leave Event', "/attendees/#{event.id}", method: :delete %>
                  </div>
                <% else %>
                  <div class="button is-centered">
                    <%= link_to 'Join Event', "/attendees/new/#{event.id}" %>
                  </div>
                <% end %>
                <div class="button is-centered">
                  <%= link_to 'Delete Event', "/events/#{event.id}", method: :delete %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="column is-two-fifths">
      <% @user.events.each do |event| %>
        <% if event.id.to_i % 2 == 0 %>
          <div class="box has-background-light">
            <div class="content">
              <strong><%= event.name %></strong>
              <small><%= (event.date).strftime("%d/%m/20%y") %></small><br>
              <small><%= event.description %></small>
            </div>
            <div class="content has-text-centered">
              <div class="button">
                <%= link_to 'View Event', "/events/#{event.id}" %>
              </div>
              <% if user_signed_in? %>
                <% if current_user.attended_events.include?(event) %>
                  <div class="button is-centered">
                    <%= link_to 'Leave Event', "/attendees/#{event.id}", method: :delete %>
                  </div>
                <% else %>
                  <div class="button is-centered">
                    <%= link_to 'Join Event', "/attendees/new/#{event.id}" %>
                  </div>
                <% end %>
                <div class="button is-centered">
                  <%= link_to 'Delete Event', "/events/#{event.id}", method: :delete %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
  </div><br><br>


